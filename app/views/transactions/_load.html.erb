<div class='container form'>
  <h2>Load Money to Wallet</h2>
  <hr>

  <form action='/transactions/load' method='post'>
    <div class='form-group'>
      <label> Your phone number</label>
      <input type='number' placeholder='+254707001213' class='form-control' required>
    </div>
    <div class='form-group'>
      <label> Amount</label>
      <input type='number' placeholder='Enter amount to transfer' class='form-control' required>
    </div>
    <div class='form-group'>
      <button class='btn btn-primary'>Deposit</button>
      &nbsp; &nbsp;
      <span><%= link_to 'Transfer', transactions_transfer_path%></span>
    </div>
  </form>
</div>
